<!-- HEADER -->
<div class="header">

  <!-- Image -->
  <div style="background:url({{profile_cover}}) no-repeat; background-position:center; background-size:cover; padding:200px 0;position: relative;" class="header-img-top">

    {{> profile/_userSurvivalCard title='Survival Challenge' content=goal}}

  </div>

  <div class="container-fluid container-profile-header">

    <!-- Body -->
    <div class="header-body mt--5 mt-md--6">
      <div class="row align-items-end">
        <div class="col-auto">

          <!-- Avatar -->
          <div class="avatar avatar-xxl header-avatar-top">
            <img src="{{avatar}}" alt="..." class="avatar-img rounded-circle border border-body">
          </div>

        </div>

        <div class="col mb-3 ml--3 ml-md--2">
          <!-- Pretitle -->
          <h6 class="header-pretitle">@{{username}}</h6>
          <!-- Title -->
          <h1 class="header-title">{{title}}</h1>
        </div>

        <div class="col-12 col-md-auto mt-2 mt-md-0 mb-md-3">
          <!-- Button -->
          {{#if isCurrentUser}}
          <a href="/settings/profile" class="btn btn-secondary d-block d-md-inline-block">Edit Your Profile</a>
          {{else}}
            <a href="#!" class="btn btn-primary d-block d-md-inline-block">Follow</a>
          {{/if}}
        </div>
  
      </div> <!-- / .row -->
    </div> <!-- / .header-body -->

  </div>
</div>

<!-- CONTENT -->
<div class="">
  <div class="row">
      <div class="col-12 col-xl-8">


            <a style="margin-bottom:20px;" class="btn btn-sm btn-outline-secondary" href="/users/@{{post.author.username}}">
                <i class="fe fe-arrow-left" style="margin-right:5px;"></i>
                Go Back to {{post.author.name}}'s full timeline
            </a>

            <br/>

            <div id="post_{{post._id}}" class="card">

                <div class="card-body">
                    <div class="mb-3">
                    <div class="row align-items-center">
                        <div class="col-auto">
                        <a href="/users/@{{post.author.username}}" class="avatar">
                            <img src="{{post.author.avatar}}" alt="..." class="avatar-img rounded-circle">
                        </a>

                        </div>
                        <div class="col ml--2">

                        <h4 class="card-title mb-1">{{post.author.name}}</h4>

                        <p class="card-text small text-muted">
                            <span class="fe fe-clock"></span> <time datetime="{{post.date_posted}}">{{moment_ago post.date_posted}}</time>
                        </p>

                        </div>
                        <div class="col-auto">
                        {{#if postControls}}
                            <div class="dropdown card-dropdown">
                            <a href="#!" class="dropdown-ellipses dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fe fe-more-vertical"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <form method="POST" action="/delete_post={{post._id}}" class="dropdown-item">
                                <button class="dropdown-item">Delete Post</button>
                                </form>
                            </div>
                            </div>
                        {{/if}}
                        </div>
                    </div> 
                    </div>

                    <p class="mb-3">{{post.post_content}}</p>

                    {{#if post.post_image}}
                    <p class="text-center mb-3">
                        <img src="{{post.post_image}}" alt="Posted by {{post.author}} on {{moment post.date_posted}}" class="img-fluid">
                    </p>
                    {{/if}}

                    <!-- Buttons -->
                    <div class="mb-3">
                    
                    <div class="row">
                        <div class="col">
                            {{post_likes post.likes user._id post._id}}
                        </div>
                    </div> 

                    </div>

                    <hr id="comments">

                    <!-- Comments -->
                    {{#if post.comments}}
                        {{#each post.comments}}
                            {{> feed/_comment author=this.author date_posted=this.date_posted content=this.content comment_id=this._id replies=this.replies}}
                        {{/each}}
                    {{/if}}

                    <hr>

                    <div class="row align-items-start">
                    <div class="col-auto">

                        <div class="avatar">
                        <img src="{{user.avatar}}" alt="Avatar for {{user.name}}" class="avatar-img rounded-circle">
                        </div>

                    </div>
                    <div class="col ml--2">

                        <form id="comment_form_{{post._id}}" class="comment_form" method="POST" action="/postcommenttopost={{post._id}}">
                        <label class="sr-only">Leave a comment on {{post.author.name}}'s post...</label>
                        <textarea class="form-control" name="comment" id="comment" placeholder="Leave a comment on {{post.author.name}}'s post.." rows="2"></textarea>
                        <button class="btn btn-primary btn-sm" type="submit" data-toggle="modal" data-target="#modalLoading">Post Comment</button>
                        </form>

                    </div>
                    </div> 

                </div>
            </div>

      </div>
    <div class="col-12 col-xl-4">

      <!-- Card -->
      {{> profile/_contentCard title='About ' name=title content=profile}}
      {{> profile/_profileMeta 
            birthday=birthday 
            joined_at=joined_at
            location=location
            website=website 
            facebook=social_facebook 
            twitter=social_twitter 
            instagram=social_instagram 
            linkedin=social_linkedin
      }}
      {{> profile/_contentCard title='Why I Got Started' content=why_started}}
      {{> profile/_contentCard title='What Motivates Me' content=motivation}}

    </div>
  </div> <!-- / .row -->
</div> <!-- / .container-fluid -->


