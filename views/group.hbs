<div class="header">

    <!-- Image -->
    <div style="background:url({{group.group_image}}) no-repeat; background-position:center; background-size:cover; padding:200px 0;position: relative;" class="header-img-top"></div>

    <div class="container-fluid">

        <!-- Body -->
        <div class="header-body mt--5 mt-md--6">
            <div class="row align-items-end">
                <div class="col-auto">
                    <!-- Avatar -->
                    <div class="avatar avatar-xxl header-avatar-top">
                        <img src="/images/groups.jpg" alt="Groups" class="avatar-img rounded border border-body">
                    </div>
                </div>

                <div class="col mb-3 ml--3 ml-md--2">
                    <!-- Pretitle -->
                    <h6 class="header-pretitle">
                        Groups
                    </h6>

                    <!-- Title -->
                    <h1 class="header-title">
                        {{group.name}}
                    </h1>
                </div>

                <div class="col-12 col-md-auto mt-2 mt-md-0 mb-md-3">     
                    <!-- Button -->
                    <a href="#!" class="btn btn-primary d-block d-md-inline-block">
                        Join
                    </a>
                </div>

            </div> <!-- / .row -->

            <div class="row align-items-center">
                <div class="col">
                    <!-- Nav -->
                    <ul class="nav nav-tabs nav-overflow header-tabs">
                        <li class="nav-item">
                            <a href="/community/groups/{{group.slug}}/discussion" class="nav-link active">
                                Discussion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/community/groups/{{group.slug}}" class="nav-link">
                                Members
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div> <!-- / .header-body -->
    </div> <!-- / .container-fluid -->
</div>

<!-- CONTENT -->
<div class="">
    <div class="row">
        <div class="col-12 col-xl-8">
            {{> groups/_groupPostForm groupName=group.name}}

            {{#if posts}}
                {{#each posts}} 
                    {{#if this.post_type.status}}
                        {{> feed/post_types/_postStatus 
                            author=this.author 
                            post_content=this.post_content 
                            date_posted=this.date_posted 
                            post_id=this._id 
                            reports=this.reports 
                            comments=this.comments 
                            likes=this.likes 
                            user=../user 
                            postControls=../postControls
                        }}
                    {{/if}}
                    {{#if this.post_type.photo}}
                        {{> feed/post_types/_postPhoto 
                            author=this.author
                            post_content=this.post_content 
                            post_image=this.post_image 
                            date_posted=this.date_posted 
                            post_id=this._id 
                            reports=this.reports 
                            comments=this.comments 
                            likes=this.likes 
                            user=../user 
                            postControls=../postControls
                        }}
                    {{/if}}
                {{/each}}
            {{else}}
                {{> feed/_noPosts avatar=avatar name=title}}
            {{/if}}

        </div>

        <div class="col-12 col-xl-4">
            {{> profile/_contentCard 
                title='About '  
                name=group.name
                content=group.description
            }}
            {{> groups/_creatorCard}}
            {{> groups/_membersCard group.members}}

        </div>
    </div> <!-- / .row -->

</div> <!-- / .container-fluid -->