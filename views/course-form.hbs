<div class="header">
  <div class="header-body">

    <h6 class="header-pretitle">
      Courses
    </h6>
    
    <h1 class="header-title">
      {{title}}
    </h1>

  </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
        
        <!-- Form -->
        <form class="account-form course-form" method="POST" {{course_form_action course._id course.slug}}>
            <div class="row">
                
                <div class="col-12">
                    
                    <!-- First name -->
                    <div class="form-group">
                        <label for="title">Course Title</label>
                        <input type="text" name="title" id="title" class="form-control" value="{{course.title}}">
                    </div>
                </div>

                <div class="col-12">

                    <div class="form-group">
                        <label for="description">Course Description</label>
                        <textarea class="form-control" name="description" id="description">{{course.description}}</textarea>
                    </div>

                </div>
                <div class="col-12">

                    <div class="form-group">
                        <label for="image">Course Image</label><br />
                        <div class="row col-12">
                            <img src="{{course.image}}" class="account__profile_cover--preview">                   
                            <div id="uploadPreview__container">
                                <p class="row space-between">
                                    <small class="text-muted">Preview:</small>
                                </p>
                                <img src="" id="uploadPreview" class="account__profile_cover--preview">
                            </div>
                        </div>
                        
                        <input type="file" name="image" id="upload" class="form-control" accept="image/png, image/jpg, image/jpeg">
                        <input type="text" name="previousID" id="previousID" disabled="disabled" value="{{course.image}}" >
                    </div>

                </div>

            </div> <!-- / .row -->


            <br />
            <hr class="mt-4 mb-5">
            <br />

            <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#modalLoading">{{button_text}}</button>
        </form>

        </div>
    </div> <!-- / .row -->
</div>