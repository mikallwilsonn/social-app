<div class="sponsor__header header" style="background:url(https://res.cloudinary.com/dxxnoqykq/image/upload/v1532715453/covers/ce-cover.jpg) no-repeat; background-size:cover; background-position:center; border-radius:3px;">
</div>

<!-- CONTENT -->
<div class="sponsor__content row space-around">
    <div class="col-12 col-xl-10">

        <div class="card">
            <div class="card-body deadsea__update-card--body">
                    <a href="https://www.google.com/maps?ll={{lat}},{{lng}}" target="_blank" class="deadsea__update--map-link">
                        <div style="background:url('/images/location.svg' ) center no-repeat, url(https://maps.googleapis.com/maps/api/staticmap?center={{lat}},{{lng}}&zoom=17&scale=1&size=800x400&maptype=roadmap&format=png&visual_refresh=true&markers=color:red%7Csize:mid); width: 100%; height:400px;">

                        </div>
                    </a>

                <div class="sponsor__titles-wrapper row space-around align-center">
                    <div class="column space-around align-center">
                        <!-- Pretitle -->
                        <h5 class="header-pretitle">{{pretitle}}</h5>
                        <!-- Title -->
                        <h1 class="header-title">{{title}}</h1>

                        <h1 style="margin-top:50px; opacity:0.5;">**NOTE** JUST A TEMPORARY VIEW TEMPLATE</h1>

                    </div>
                </div>

                <!-- Text -->
                <div class="sponsor__content-wrapper row space-around">
                    <p>{{breaklines content}}</p>
                </div>

            </div>
        </div>

    </div>
</div> <!-- / .row -->
